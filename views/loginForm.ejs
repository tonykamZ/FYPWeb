<head>
    <title>Login</title>
    <style>
        .container {
            padding-top: 20px;
        }
    </style>

</head>

<body>


    <div class="container">
        <form method="POST" action="/">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label><b>Username</b></label>
                    <input type="string" class="form-control" name="username" required>
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label><b>Password</b></label>
                    <input type="string" class="form-control" name="password" required>
                </div>

            </div>

            <div>
                <button class="btn btn-outline-success" type="submit">Login</button>
            </div>

            <small>
                <a href="/signup">Don't have an account yet? create an account here</a>

            </small>

        </form>
    </div>

