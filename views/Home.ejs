            transition: .3s;
        }

        .noContent {
            color: #000 !important;
            background-color: transparent !important;
            pointer-events: none;
        }

        .phone-header {
          display: none;
        }

        .goToTop{
            position: fixed;
            cursor: pointer;
            left: 3%;
            bottom: 11%;
            font-size: 32px;
            opacity: 0;
            transition: all 1s ease-in-out;
            display: none;
            z-index: 99;
        }

        @media only screen and (max-width: 990px) {
           .page-header {
