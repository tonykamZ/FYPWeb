        var fulfill = document.getElementById('fulfill');

        if (chkFull.checked == true){
            fulfill.innerHTML = "";
            fulfill.innerHTML += "Only include available posts";
        } else {
            fulfill.innerHTML = "";
            fulfill.innerHTML += "Including posts which fulfill the quota";
        }
    }

