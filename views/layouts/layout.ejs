<script>

  var currentLocation = window.location;
  if (currentLocation == "/read/profile?username=<%= req.session.memberid %>") {
    document.getElementById("profile").style.display = "none";
  }

  function startTime() {
    const today = new Date();
    let d = today.getDay();
    let h = today.getHours();
    let m = today.getMinutes();
    var weekday = ["Sun", "Mon", "Tue", "Wed", "Thurs", "Fri", "Sat"];
    var amOrpm = " AM";
    if (h > 12) {
      h = h - 12;
      amOrpm = " PM";
    }
    //let s = today.getSeconds();
    m = checkTime(m);
    // s = checkTime(s);
    document.getElementById('txt').innerHTML = weekday[d] + " " + h + ":" + m + amOrpm;
    setTimeout(startTime, 1000);
  }

  function checkTime(i) {
    if (i < 10) { i = "0" + i };  // add zero in front of numbers < 10
    return i;
  }

  var sessionKey = "<%= req.session.memberid %>";
  if (sessionKey) {
    if (sessionKey == "admin") {
      document.getElementById('navBar').className += ' custom-admin';
      document.getElementById('footer').className += ' custom-admin-2';
    } else {
      document.getElementById('navBar').className += ' custom-nav';
      document.getElementById('footer').className += ' custom-footer';
    }
  } else {
    document.getElementById('navBar').className += ' custom-nav';
    document.getElementById('footer').className += ' custom-footer';
  }


</script>

