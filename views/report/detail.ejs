                            <b>
                                <%= report.status %>
                            </b>
                            <% }else if(report.status=="Approved" ){ %>
                                <b style="color: #61ff89;">
                                    <%= report.status %>
                                </b>
                                <% }else if(report.status=="Rejected" ){ %>
                                    <b style="color: rgb(252, 133, 35);">
                                        <%= report.status %>
                                    </b>
