<head>
    <style>

        #popup {
            display: none;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            position: fixed;
            background-color: rgba(168, 168, 168, 0.9);
        }

        #form {
            position: absolute;
            background-color: #f5f5f5;
            border: 1px solid #212121;
            border-radius: 2px;
            padding: 20px;
            width: 300px;
            left: 50%;
            top: 10%;
            margin-left: -150px;
        }

        #close {
            position: absolute;
            font-weight: bold;
            font-size: 35px;
            cursor: pointer;
            color: rgb(231, 4, 4);
            margin-left: 246px;
            margin-top: -19px;
            width: 30px;
            height: 27px;
        }

        #submit{
            display:none;
        }

        #info{
            display: none;
        }
    </style>
</head>

<body>
    <button id="add" onclick="show()">Add</button>

    <div id="popup">
        <form id="form" method="POST" action="/report">
            <i class="fa fa-times" id="close" onclick="hide()"></i>
            <div class="form-row">
                 <label><b>⚠️Report content</b></label>
                <div class="form-group col-md-10">
                    <input type="string" class="form-control" name="content" required>
                </div>
            </div>
            <div class="form-row">
                <label><b>Evidence (jpg file)</b></label>
                   <input type="file" accept=".jpg" class="form-control" name="evidence" required>
           </div>
           <br>


           <a id="confirm" class="btn btn-outline-info" onclick="confirm()">Confirm</a> 
           <small id="info">*Double check the information that you provided. This may help us identify malicious activities.</small>
            <button id="submit" class="btn btn-outline-success" type="submit">Submit</button>
        </form>
    </div>
</body>

<script>
    function show() {
        document.getElementById("popup").style.display = "block";
    }
    function hide() {
        document.getElementById("popup").style.display = "none";

        document.getElementById("name").value = "";
        document.getElementById("age").value = "";
        document.getElementById("country").value = "";
    }
    function confirm(){
        document.getElementById("confirm").style.display = "none";
        document.getElementById("info").style.display = "block";
        document.getElementById("submit").style.display = "block";
    }
</script>